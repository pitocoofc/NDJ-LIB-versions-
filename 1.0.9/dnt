#!/bin/bash
# dnt - Gerenciador de M칩dulos DNT

if [ "$1" == "install" ]; then
    REPO=$2
    FOLDER_NAME=$(echo $REPO | cut -d'/' -f2)
    
    echo "游닌 Buscando m칩dulo no GitHub: $REPO..."
    mkdir -p modules
    
    # Se a pasta j치 existir, remove para atualizar
    rm -rf "./modules/$FOLDER_NAME"
    
    git clone "https://github.com/$REPO.git" "./modules/$FOLDER_NAME"
    
    # O AJUSTE EST츼 AQUI: Apontando para a pasta correta dentro de node_modules
    node -e "require('./node_modules/easy-djs-bot/src/Client').checkModule('./modules/$FOLDER_NAME')"
else
    echo "Uso: ./dnt install usuario/repositorio"
fi
      
